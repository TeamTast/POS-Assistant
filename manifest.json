{
    "manifest_version": 3,
    "name": "POS アシスタント",
    "description": "学力POSの動作を改善",
    "version": "1.2.0",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "permissions": [
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "https://*.toshin.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.toshin.com/pos*",
                "https://toshin.com/pos*",
                "https://pos.toshin.com/SSO1/SSOMenu/PosApplication.aspx",
                "https://pos.toshin.com/sso1/ssomenu/sessionerror.html*",
                "https://pos.toshin.com/SSO1/SSOMenu/sessionerror.html*",
                "https://pos2.toshin.com/RBT2/RBT_Student/Page/ErrorPages/RBTLoginError.aspx",
                "https://pos.toshin.com/TGT/OPCTTS/OPCTTS_Student/EnshuJisshi*",
                "https://pos.toshin.com/TGT/OPCTTS/OPCTTS_Student/EnshuKaishi*",
                "https://pos.toshin.com/TGT/OPCTTS/OPCTTS_Student/MondaiKaitoInsatsu*",
                "https://pos.toshin.com/TGT/OPCTSS/OPCTSS_Student/KekkaShousai*",
                "https://pos.toshin.com/TGT/OPCTTS/OPCTTS_Student/KekkaShosai*",
                "https://pos.toshin.com/TGT/OPCTTS/OPCTTS_Student/NendobetsuRireki*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "functions/enshu_assistant/content.js",
                "functions/enshu_assistant/pdf_renamer/shared.js",
                "functions/enshu_assistant/pdf_renamer/get_mondai/enshu_jisshi.js",
                "functions/enshu_assistant/pdf_renamer/get_mondai/mondai_kaito_insatsu.js",
                "functions/enshu_assistant/pdf_renamer/get_mondai/background.js",
                "functions/enshu_assistant/pdf_renamer/get_kaisetsu/kekka_shousai.js",
                "functions/enshu_assistant/pdf_renamer/get_kaisetsu/download.js",
                "functions/enshu_assistant/pdf_renamer/get_kaisetsu/background.js",
                "functions/enshu_assistant/marksheet_enhancer/enshu_jisshi.js",
                "functions/enshu_assistant/daimon_navigation/kekka_shosai.js",
                "functions/enshu_assistant/daimon_navigation/nendobetsu_rireki.js",
                "functions/session_manager/content.js",
                "functions/session_manager/constants.js",
                "functions/pos_application_enhancer/content.js",
                "storage.js"
            ],
            "matches": [
                "https://*.toshin.com/*"
            ]
        }
    ]
}